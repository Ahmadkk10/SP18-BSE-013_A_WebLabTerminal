extends ../layout

block content
    h1 Add New Product
    form(action="/products/add", method="post")
        <div id="pnl"> 
            .form-group
                label(for="name") <b>Name</b>
                input#name(type="text", class="form-control", placeholder="Name", name="name")
            .form-group
                label(for="Price") <b>Price</b>
                input#Price(type="text", class="form-control", placeholder="Price", name="Price")
            .form-group
                label(for="pId") <b>Code</b>
                input#productid(type="text" ,class="form-control",placeholder="Code", name="pId")
            .form-group
                label(for="Description") <b>Details</b>
                textarea#Description(name="Description", class="form-control",cols="30", rows="10", placeholder="Description")    
            .form-group
                label(for="splprice") <b>Spl Price</b>
                input#productid(type="text" ,class="form-control",placeholder="Spl Price", name="splprice")
                input(type="submit",style="margin-top:5px;" class="btn btn-info")          
        </div>    